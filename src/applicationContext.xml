<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- ioc configuration-->
    <bean id="user" class = "com.example.ioc.User" />

    <!-- 静态工厂配置-->
    <bean id="bean" class = "com.example.bean.BeanFactory" factory-method="getBean" />

    <!-- 实例工厂配置-->
    <!-- 创建工厂对象-->
    <bean id="beanNonStaticFactory" class = "com.example.bean.BeanNonStaticFactory" />
    <!-- 找到方法-->
    <bean id="beanNonStatic" factory-bean="beanNonStaticFactory" factory-method="getBeanNonStatic"/>

    <!-- 有参数构造注入-->
    <bean id="propertyDemoOne" class ="com.example.property.PropertyDemo1">
        <!-- 注入参数-->
        <constructor-arg name="username" value="success"></constructor-arg>
    </bean>
</beans>